# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://saro:password@localhost:5432/saro_db

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long

# Domain Configuration
FRONTEND_URL=https://gsteaching.com
ALLOWED_ORIGINS=https://gsteaching.com,https://www.gsteaching.com

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# SMS Configuration
SMS_API_KEY=
SMS_SENDER_ID=8809617628909
SMS_API_URL=http://bulksmsbd.net/api/smsapi

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20

# SSL Settings
HTTPS=true
SSL_CERT_PATH=/etc/letsencrypt/live/gsteaching.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/gsteaching.com/privkey.pem

# Health Check
TEST_DB_CONNECTION=true

# Logging
LOG_LEVEL=info